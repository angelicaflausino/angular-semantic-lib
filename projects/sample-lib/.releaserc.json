{
  "branches": [
    "main",
    { "name": "test/pack-ng-packagr", "prerelease": "test" }
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    ["@semantic-release/exec",
      {
        "prepareCmd": "ng-packagr -p ng-package.json"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "pkgRoot": "dist",
        "tarballDir": "dist"
      }
    ],
    "@semantic-release/github",
    [
      "@semantic-release/git",
      {
        "assets": ["dist/package.json", "dist"]
      }
    ]
  ],
  "preset": "angular",
  "scripts": {
    "postversion": "cp -r dist/package.json .."
  }
}

